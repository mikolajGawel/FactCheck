{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "lib": ["es2020", "dom"],
    "composite": true,
    "baseUrl": "."
  },
  "include": ["src/**/*", "test/**/*", "dev/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
